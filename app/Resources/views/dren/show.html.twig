{% extends 'base.html.twig' %}

{% block body %}
    <h1>Dren</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ dren.id }}</td>
            </tr>
            <tr>
                <th>Libelle</th>
                <td>{{ dren.libelle }}</td>
            </tr>
            <tr>
                <th>Statut</th>
                <td>{% if dren.statut %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ dren.slug }}</td>
            </tr>
            <tr>
                <th>Publiepar</th>
                <td>{{ dren.publiePar }}</td>
            </tr>
            <tr>
                <th>Modifiepar</th>
                <td>{{ dren.modifiePar }}</td>
            </tr>
            <tr>
                <th>Publiele</th>
                <td>{{ dren.publieLe }}</td>
            </tr>
            <tr>
                <th>Modifiele</th>
                <td>{{ dren.modifieLe }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_dren_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('admin_dren_edit', { 'id': dren.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
