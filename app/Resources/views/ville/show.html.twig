{% extends 'base.html.twig' %}

{% block body %}
    <h1>Ville</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ ville.id }}</td>
            </tr>
            <tr>
                <th>Libelle</th>
                <td>{{ ville.libelle }}</td>
            </tr>
            <tr>
                <th>Statut</th>
                <td>{% if ville.statut %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ ville.slug }}</td>
            </tr>
            <tr>
                <th>Publiepar</th>
                <td>{{ ville.publiePar }}</td>
            </tr>
            <tr>
                <th>Modifiepar</th>
                <td>{{ ville.modifiePar }}</td>
            </tr>
            <tr>
                <th>Publiele</th>
                <td>{{ ville.publieLe }}</td>
            </tr>
            <tr>
                <th>Modifiele</th>
                <td>{{ ville.modifieLe }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_ville_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('admin_ville_edit', { 'id': ville.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
