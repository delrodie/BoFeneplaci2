{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form action="{{ path("fos_user_security_check") }}" method="post">
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}

    <div class="row clearfix">
        <div class="col-md-5 col-md-offset-3">
            <div class="form-group">
                <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" class="form-control" value="" placeholder="{{ 'security.login.username'|trans }} ...*" />
            </div>
        </div>
        <div class="col-md-5 col-md-offset-3">
            <div class="form-group">
                <input type="password" id="password" name="_password" required="required" class="form-control" value="" placeholder="{{ 'security.login.password'|trans }} ...*" />
            </div>
        </div>
    </div>
    <div class="row">        
        <div class="col-md-offset-3">
            <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
            <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
        </div>
    </div>
    <div class="row">
        <div class="col-md-offset-4">
            <div class="form-group form-bottom">
                <input type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" class="btn-style-one" data-loading-text="Veuillez patienter..." />
            </div>
        </div>
    </div>
    
</form>
